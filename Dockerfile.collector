FROM golang:1.23-alpine AS builder

WORKDIR /build

RUN apk add --no-cache gcc musl-dev sqlite-dev protobuf-dev

COPY go.mod go.sum ./
RUN GOTOOLCHAIN=auto go mod download

COPY . .

RUN CGO_ENABLED=1 GOOS=linux GOTOOLCHAIN=auto go build -o collector ./cmd/collector

FROM alpine:latest

RUN apk add --no-cache sqlite-libs ca-certificates

WORKDIR /app

COPY --from=builder /build/collector /app/collector

RUN mkdir -p /data && chmod 777 /data

EXPOSE 9090 8080

CMD ["/app/collector"]
