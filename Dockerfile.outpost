FROM golang:1.23-alpine AS builder

WORKDIR /build

RUN apk add --no-cache gcc musl-dev sqlite-dev protobuf-dev

COPY go.mod go.sum ./
RUN GOTOOLCHAIN=auto go mod download

COPY . .

RUN CGO_ENABLED=1 GOOS=linux GOTOOLCHAIN=auto go build -o outpost ./cmd/outpost

FROM alpine:latest

RUN apk add --no-cache sqlite-libs ca-certificates

WORKDIR /app

COPY --from=builder /build/outpost /app/outpost

EXPOSE 9090

CMD ["/app/outpost"]
