FROM golang:1.23-alpine AS builder

WORKDIR /build

RUN apk add --no-cache gcc musl-dev protobuf-dev

COPY go.mod go.sum ./
RUN GOTOOLCHAIN=auto go mod download

COPY . .

RUN GOTOOLCHAIN=auto go build -o nodectl ./cmd/nodectl

FROM alpine:3.19

# Work around QEMU/buildkit trigger issue by using --no-scripts
RUN apk add --no-cache --no-scripts ca-certificates tzdata

WORKDIR /app

COPY --from=builder /build/nodectl /app/nodectl

ENTRYPOINT ["/app/nodectl"]
CMD ["--help"]
